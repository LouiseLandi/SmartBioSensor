

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultado_calibracao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.androidplot.xy.XYPlot
            android:id="@+id/plotCalibration"
            style="@style/APDefacto.Light"
            android:layout_width="fill_parent"
            android:layout_height="470dp"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            app:domainTitle="domain"
            app:rangeTitle="range" />

        <Button
            android:id="@+id/buttonDiscardCalibration"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="93dp"
            android:text="@string/action_discard_calibration"
            android:textColor="?attr/colorPrimary"
            android:layout_below="@+id/plotCalibration"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/buttonSaveCalibration"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plotCalibration"
            android:layout_toEndOf="@+id/buttonDiscardCalibration"
            android:text="@string/action_save_calibration"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/linearRegressionEquationCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginTop="39dp"
            android:text="TextView"
            android:layout_marginStart="42dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonDiscardCalibration" />

        <TextView
            android:id="@+id/linearRegressionCoefficientCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignStart="@+id/linearRegressionEquationCalibration"
            android:layout_below="@+id/linearRegressionEquationCalibration"
            android:text="TextView" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
