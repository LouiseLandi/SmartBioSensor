<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_referencia_calibracao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:layout_marginTop="@dimen/md_toplines_referencia"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/factorReferenceCalibrationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/referenceTitle"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="13dp"
            android:text="@string/correction_factor_textview_title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorMediumGrey"
            android:textSize="@dimen/list_body_calibragem"
            android:visibility="gone" />

        <TextView
            android:id="@+id/referenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonMeasureReferenceCalibration"
            android:layout_alignBottom="@+id/buttonMeasureReferenceCalibration"
            android:layout_marginStart="19dp"
            android:text="@string/correction_title"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/article_subheading" />

        <Button
            android:id="@+id/buttonMeasureReferenceCalibration"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:text="@string/action_measure_reference_calibration"
            android:textColor="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/buttonCheckReferenceCalibration"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonMeasureReferenceCalibration"
            android:layout_below="@+id/referenceTitle"
            android:tint="@color/colorButtonGrey"
            android:visibility="gone"
            app:srcCompat="@drawable/icone_check" />

        <ProgressBar
            android:id="@+id/progressBarReferenceCalibration"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonMeasureReferenceCalibration"
            android:layout_below="@+id/referenceTitle"
            android:layout_marginEnd="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/factorReferenceCalibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/factorReferenceCalibrationTitle"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/factorReferenceCalibrationTitle"
            android:text=""
            android:textColor="@color/colorMediumGrey"
            android:visibility="gone" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
